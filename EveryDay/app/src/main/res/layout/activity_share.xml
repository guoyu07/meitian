<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_half_translucent"
    android:visibility="gone"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <ImageView
            android:id="@+id/iv_weibo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/btn_share_weibo"
            android:layout_toLeftOf="@+id/iv_circle"
            android:layout_marginRight="30dp"
           android:layout_marginBottom="-70dp"
           android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/btn_share_wechat_timeline"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-70dp"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv_circle"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/btn_share_wechat"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-70dp"
            android:layout_alignParentBottom="true"
            />
        <ImageView
            android:id="@+id/iv_qzone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/iv_circle"
            android:layout_below="@+id/iv_circle"
            android:src="@mipmap/btn_share_qzone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="-10dp"
            />
        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/iv_circle"
            android:layout_below="@+id/iv_circle"
            android:src="@mipmap/btn_share_qq"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginRight="-10dp"
            />
    </RelativeLayout>
</RelativeLayout>
